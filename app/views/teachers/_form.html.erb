<%= form_for(@teacher) do |f| %>
    <% if @teacher.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@teacher.errors.count, "error") %>
        prohibited this user from being saved:
      </h2>
   
      <ul>
      <% @teacher.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul></div>
    <% end %>

    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %><br><br>
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %><br><br>
    <%= f.label :phone_number %><br>
    <%= f.telephone_field :phone_number %><br><br>
    <%= f.check_box :volunteer %><br>
    <%= f.label :volunteer, "Check box if you are a volunteer" %><br><br>
    <%= f.label :DL, "Please enter your Driver's Licence Number. All teachers will be subject to a background check." %><br>
    <%= f.number_field :dl %><br><br>
    <%= f.label :email, "This will be used for future logins." %><br>
    <%= f.email_field :email %><br><br>
    <%= f.label :password %><br>
    <%= f.password_field :password %><br><br>
    <%= f.submit class: "btn btn-primary" %><br><br>
<% end %> 
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<title>Sunday School</title>
    <%= favicon_link_tag %>
		<style type="text/css">
		
			body {
				margin:0;
				padding:0;
				font-family: .sansserif {
          font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        }
				line-height: 1.5em;
			}
			
			#header {
				background: #C9EAF3;
				height: 130px;
				text-align: center;
			}
			
			#header h1 {
				margin: 0;
				padding-top: 25px;
			}
			
			main {
				padding-bottom: 10050px;
				margin-bottom: -10000px;
				padding-top: 25px;
				float: left;
				width: 100%;
				background: #FDFDFO;
			}
			
			#footer {
				clear: left;
				width: 100%;
				background: #E1E1FF;
				text-align: center;
				padding: 4px 0;
			}
	
			#wrapper {
				overflow: hidden;
			}
						
			#content {
				margin-left: 25px; /* Same as 'nav' width */
				margin-right: 25px; /* Same as 'nav' width */
			}
			
			.innertube {
				margin: 25px; /* Padding for content */
				margin-top: 0;
			}
		
			p {
				color: #555;
			}
		
		</style>
	
	</head>
	
	<body>		

		<header id="header">
			<div class="innertube">
				<h1>Sunday School</h1><br>
				<% if current_teacher %><p><%= link_to 'Home', teacher_path(@current_user) %> | <%= link_to 'Logout', logout_path(session)%></p>
				<% end %><br>
			</div>
		</header>
		
		<div id="wrapper">
		
			<main>
				<div id="content">
					<div class="innertube">
						<body>
            <%= yield %>
            </body>
					</div>
				</div>
			</main></div>
		
		<footer id="footer">
      <div class="innertube">
	  <% if current_teacher %>
	  <i><p> Logged in as <%= current_teacher.email %><p></i>
		
		<% else %>
		<p><i>Sunday School WebApp</i></p>
        <% end %>
			</div>
		</footer>
	
	</body>
</html>
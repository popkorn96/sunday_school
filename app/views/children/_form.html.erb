<%= form_for(@child) do |f| %>
    <% if @child.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@child.errors.count, "error") %>
        prohibited this student from being saved:
      </h2> 
   
      <ul>
      <% @child.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul></div>
    <% end %>

    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %><br><br>
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %><br><br>
    <%= f.label :age %><br>
    <%= f.number_field :age %><br><br>
    <%= f.label :favorite_color %><br>
    <%= f.text_field :favorite_color%><br><br>
    <%= f.collection_select(:parent_id, Parent.all.order('first_name + last_name ASC'), :id, "to_s", { prompt: 'Select a Parent' }, { id: 'parent_select' }) %><br><br>
    <%= f.collection_select :classroom_id, Classroom.all.order('title ASC'), :id, :title, { prompt: 'Select a Classroom' }, { id: 'classroom_select' } %><br><br>
    <%= f.submit class: "btn btn-primary" %><br><br>
<% end %> 
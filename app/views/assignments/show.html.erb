<h1>Assignment: <%=@assignment.title%></h1>
<hr>
<h4>Description: <%=@assignment.description%></h4><br>
<% if @assignment.assignments_children.empty? %>
<p><i>There are currently no students assigned to this assignment. </i></p>
<% else %>
<h4>Students Assigned: </h4>
<% @assignment.assignments_children.each do |a| %>
    <div><li><%= link_to a.child.to_s, child_path(a.child) %></li></div>
<% end %> </p><br>
<% end %>
<p><%= link_to 'Edit Assignment', edit_teacher_assignment_path(@assignment) %></p>
<p><i><%= @assignment.last_updated %></i></p>

<%= form_for(@parent) do |f| %>
    <% if @parent.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@parent.errors.count, "error") %>
        prohibited this user from being saved:
      </h2>
   
      <ul>
      <% @parent.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul></div>
    <% end %>

    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %><br><br>
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %><br><br>
    <%= f.label :phone_number %><br>
    <%= f.telephone_field :phone_number %><br><br>
    <%= f.label :emergency_name, "Please provide an emergency contact." %>
    <%= f.text_field :emergency_name %>
    <%= f.label :emergency_number, "Emergency phone#:"%>
    <%= f.telephone_field :emergency_number %><br><br>
    <%= f.label :email %><br>
    <%= f.email_field :email %><br><br>
    <%= f.label :password %><br>
    <%= f.password_field :password %><br><br>
    <%= f.submit class: "btn btn-primary" %><br><br>
<% end %> 